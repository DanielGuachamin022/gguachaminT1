<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gguachaminT1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">
            <Label 
                Text="App de cálculo del aporte al IESS"
                TextColor="Blue"
                FontSize="Medium"
                HorizontalTextAlignment="Center">
            </Label>
            <Entry
                x:Name="txtNombre"
                Placeholder="Ingrese un nombre"/>
            <Entry
                x:Name="txtApellido"
                Placeholder="Ingrese un apellido"/>
            <Entry
                x:Name="txtEdad"
                Placeholder="Ingrese edad"
                Keyboard="Numeric"/>
            <Entry
                x:Name="txtSalario"
                Placeholder="Ingrese salario"
                Keyboard="Numeric"/>
            <Button x:Name="btnCalcularAporte"
                    Text="Calcular Aporte"
                    Clicked="btnCalcularAporte_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
